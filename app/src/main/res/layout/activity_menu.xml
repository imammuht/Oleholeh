<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sunubismo.oleholeh.MenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/textColorGrey"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/bt_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_margin="0.2dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/daftartoko" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar Toko"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_margin="0.2dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profilesaya" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil Saya"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/textColorGrey"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/bt_about"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_margin="0.2dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tentang" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_around"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_margin="0.2dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/keluar" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keluar"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/textColorGrey"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/bt_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_margin="0.2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tentang" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_margin="0.2dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
